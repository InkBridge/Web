<!DOCTYPE html>
<html>

<head>
  <title>InkBridge</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/Images/logo.png">
  <link rel="stylesheet" type="text/css" href="/Bootstrap/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/profile.css">
  <link href="https://fonts.googleapis.com/css?family=Amarante" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" crossorigin="anonymous">
</head>

<body>
  <section class="prof_page">

  <!-- Profile Starts -->
    <div class="row" id="prof_det">
      <div class="col-2">
        <img src="/Images/p2.jpg" class="img-responsive" id="prof_img">
      </div>
      <div class="col-6" id="prof_stat">
        <h1 id="usr_name">raiedkhan</h1>
        <div id="top">
          <span id="flws"><span id="usr_flws">999 </span>Followers</span>
          <span id="flwng"><span id="usr_flwng">999 </span>Following</span>
          <span id="artc"><span id="usr_artc">100 </span>Articles</span><br>
        </div>
        <div id="bottom">
          <span id="pens"><span id="usr_pens">100 </span>Pens</span>
          <span id="quils"><span id="usr_quils">100 </span>Quills</span>
        </div>
      </div>
    </div>
  <!-- Profile Ends -->
    <hr>
  <!-- Options Starts -->  
    
    <div class="row" id="tabs">
      <div class="col text-center"><a class="btn-floating btn-lg btn-fb" id="news_btn" onclick="Switch(1);">NEWS-FEED</a></div>  
      <div class="col text-center"><a class="btn-floating btn-lg btn-fb" id="post_btn" onclick="Switch(2);">POSTS</a></div>
      <div class="col text-center"><a class="btn-floating btn-lg btn-fb" id="draft_btn" onclick="Switch(3);">DRAFTS <i class="fas fa-pen-square"></i></a></div>  
    </div>

  <!-- Options Ends -->

  <!-- Content Starts -->
    <!-- NEWS FEED Starts -->  
      <div class="container" id="news_feed">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4  card" >
            <img src="/Images/p1.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p2.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p3.jpg" class="card-img-top img-responsive" alt="...">
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4  card" >
            <img src="/Images/p4.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p5.jpg" class="card-img-top img-responsive" alt="...">
          </div>
        </div>
      </div>
    <!-- NEWS FEED Ends -->  

    <!-- Posts Starts -->  
      <div class="container" id="posts" style="display: none;">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4  card" >
            <img src="/Images/p5.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p3.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p4.jpg" class="card-img-top img-responsive" alt="...">
          </div>
        </div>
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4  card" >
            <img src="/Images/p2.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p1.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p5.jpg" class="card-img-top img-responsive" alt="...">
          </div>
        </div>
      </div>
    <!-- Posts Ends -->  

    <!-- Draft Starts -->  
      <div class="container" id="drafts" style="display: none;">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4  card" >
            <img src="/Images/p1.jpg" class="card-img-top img-responsive" alt="...">
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 card">
            <img src="/Images/p2.jpg" class="card-img-top img-responsive" alt="...">
          </div>
        </div>
      </div>
    <!-- Draft Ends -->  

  <!-- Content Ends -->


  </section>
</body>

